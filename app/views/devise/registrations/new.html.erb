<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-signin mt-5">
    <h1 class="h3 mb-3 font-weight-normal text-center">会員登録</h1>
    <%= f.label :image, "プロフィール画像", class: "oi oi-camera-slr btn btn-outline-danger btn-block mb-2" %>
    <%= f.file_field :image, class: "btn btn-outline-danger btn-block mb-2" %>
    <%= f.label :ニックネーム, class: "sr-only" %>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "ニックネーム", class: "form-control mb-2", id: "inputPassword", placeholder: "ニックネームを入力" %>
    <%= f.label :メールアドレス, class: "sr-only" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2", id: "inputEmail", placeholder: "メールアドレスを入力" %>
    <%= f.label :パスワード, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control mb-2", id: "inputPassword", placeholder: "パスワードを入力" %>
    <%= f.label :パスワード確認用, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "inputPassword", placeholder: "同じパスワードを入力" %>
    <div class="form-check mb-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="rememberCheck">
      <label class="form-check-label" for="rememberCheck">
        ログイン状態を保存
      </label>
    </div>
    <%= f.submit "会員登録する", class: "btn btn-lg btn-danger btn-block mb-2" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
