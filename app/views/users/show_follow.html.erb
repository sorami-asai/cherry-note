<% @user.following.each do |user| %>
  <div class="card text-center w-75 mt-5 mb-5 mx-auto">
    <div class="card-header">
      <p style="font-weight: bold;"><%= link_to "#{user.nickname}さんのマイページ", user_path(user) %></p>
    </div>
    <div class="card-body">
      <% if user.image.nil? %>
        <%= link_to edit_user_path(user) do %>
          <%= image_tag "assets/071-01.png", size: "100x100", class: "user-image-circle mb-2" %>
        <% end %>
      <% else %>
        <%= link_to edit_user_path(user) do %>
          <%= image_tag user.image, size: "100x100", class: "user-image-circle mb-2" %>
        <% end %>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      <% if user_signed_in? && user.id == current_user.id %>
        <%= link_to 'マイページの編集', edit_user_path(user) %>
      <% end %>
    </div>
  </div>
<% end %>
